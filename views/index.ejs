<script>
	var today = new Date();
	var date =  today.getDate()+'/'+(today.getMonth()+1)+'/'+today.getFullYear();
	var day=today.getDay();
	var words=['Sunday','Monday','Tuesday','Thursday','Friday','Saturday']
	document.getElementById("day").innerHTML=date+" "+words[day];
	//document.getElementById("date").innerHTML=words[day];

</script>

</html>